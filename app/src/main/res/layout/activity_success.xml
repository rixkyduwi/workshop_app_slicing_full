<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/logosukses"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_success"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
        android:id="@+id/messagesukses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pemesanan Tiket \nBerhasil !"
        android:textColor="@color/font_high_emphasis"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/logosukses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_primary"
        android:text="kembali"
        app:layout_constraintTop_toBottomOf="@+id/messagesukses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>