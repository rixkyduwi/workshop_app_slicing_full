<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg_bg2"
            android:orientation="horizontal"
            android:padding="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="detail acivity"
                android:background="@drawable/ic_back"
                android:layout_marginTop="1dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="24dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="detail wisata"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"
                android:textColor="@color/font_high_emphasis"
                    />
        </LinearLayout>
<HorizontalScrollView
    android:id="@+id/ImageWisata"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/topbar">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:background="@drawable/bahari"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bahari_2"/>
    </LinearLayout>
</HorizontalScrollView>
    <HorizontalScrollView
        android:id="@+id/courseltumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ImageWisata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="13dp"
            android:layout_width="59.58dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            >
                <ImageView
                    android:layout_width="59.58dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bahari_2"

                    />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="13dp"
            android:layout_width="59.58dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="59.58dp"
                android:layout_height="50dp"
                android:background="@drawable/bahari"

                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="13dp"
            android:layout_width="59.58dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="59.58dp"
                android:layout_height="50dp"
                android:background="@drawable/bahari_3"

                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="13dp"
            android:layout_width="59.58dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="59.58dp"
                android:layout_height="50dp"
                android:background="@drawable/bahari_4"

                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="13dp"
            android:layout_width="59.58dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="59.58dp"
                android:layout_height="50dp"
                android:background="@drawable/bahari"

                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/courseltumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/checkout">
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingTop="8dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp"

        >
    <LinearLayout
        android:id="@+id/content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bahari Waterpark"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20dp"
            android:textColor="@color/font_high_emphasis"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="Rp. 25.000/orang"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16dp"
            />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/content2"
            android:layout_below="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6 (3000+ ulasan)"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12dp"
                android:textColor="@color/font_high_emphasis"

                />

        </LinearLayout>
        <TextView
            android:id="@+id/content3"
            android:layout_below="@+id/content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahari Waterpark Tegal menyuguhkan spot menarik yang rekomended untuk liburan keluarga saat akhir pekan tiba.
Waterpark memang tempat yang seru untuk menghabiskan hari libur bersama keluarga tercinta.
Banyak tempat piknik di Tegal yang rekomended untuk anda jadikan destinasi kunjungan berlibur."
            android:textSize="14dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/font_high_emphasis"
            />
        <LinearLayout
            android:id="@+id/content4"
            android:layout_below="@+id/content3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">
            <androidx.cardview.widget.CardView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:backgroundTint="@color/bg_bg2"
                app:cardCornerRadius="7dp"
                android:layout_marginEnd="8dp"
                android:outlineAmbientShadowColor="@color/tertiary"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_spot"
                android:layout_gravity="center"
                />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12dp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pesurungan Lor, Margadana"
                    android:textSize="14dp"
                    android:textColor="@color/font_high_emphasis"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/content5"
        android:layout_below="@+id/content4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buka"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12dp"
                android:textColor="@color/primary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08.00 - 16.00 WIB"
                android:textSize="14dp"
                android:textColor="@color/font_high_emphasis"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/content6"
            android:layout_below="@+id/content5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buka"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12dp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08.00 - 16.00 WIB"
                    android:textSize="14dp"
                    android:textColor="@color/font_high_emphasis"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content7"
            android:layout_below="@+id/content6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buka"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12dp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08.00 - 16.00 WIB"
                    android:textSize="14dp"
                    android:textColor="@color/font_high_emphasis"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content8"
            android:layout_below="@+id/content7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buka"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12dp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08.00 - 16.00 WIB"
                    android:textSize="14dp"
                    android:textColor="@color/font_high_emphasis"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content9"
            android:layout_below="@+id/content8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buka"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12dp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08.00 - 16.00 WIB"
                    android:textSize="14dp"
                    android:textColor="@color/font_high_emphasis"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/content10"
            android:layout_below="@+id/content9"
            android:paddingStart="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:cardCornerRadius="10dp"
            >
            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                 >

            </WebView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_primary"
    android:layout_marginTop="15dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:layout_marginBottom="15dp"
    android:text="Pesan"
    >

</Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>